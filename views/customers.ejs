<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers Record</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Sour+Gummy:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="container mt-5 wrapper">
        <form class="row g-3 form" action="/ok" method="POST">
            <div class="col-12">
                <label for="customerName" class="form-label">Customer Name</label>
                <input type="text" class="form-control" name="customerName" placeholder="Customer name" required>
            </div>
            <div class="col-12">
                <label for="medicineName" class="form-label">Medicine Name</label>
                <input type="text" class="form-control" name="medicineName" placeholder="Medicine name" required>
            </div>
            <div class="col-md-6">
                <label for="pDate" class="form-label">Purchase Date</label>
                <input type="date" class="form-control" name="pDate" required>
            </div>
            <div class="col-md-6">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" name="price" placeholder="Price" min="0" required>
            </div>
            <div class="col-md-6">
                <label for="price" class="form-label">Quantity</label>
                <input type="number" class="form-control" name="qty" placeholder="Quantity" min="0" required>
            </div>
            <div class="col-md-6">
                <label for="PhNo" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" name="PhNo" placeholder="Phone no." pattern="[0-9]{10}" required>
            </div>
            <div class="col-12">
                <button type="submit" class="btn buttons">Submit</button>
            </div>
        </form>
        <% cus.forEach((customer, index) => { %>
            <div class="card mt-3">
                <h5 class="card-header">Customer: <%= customer.name %> | Medicine: <%= customer.medi %></h5>
                <div class="card-body">
                    <h5 class="card-title">Price: <%= customer.price %>/- Rs</h5>
                    <p class="card-text">Purchase Date: <%= customer.purchaseDate %></p>
                    <p class="card-text">Quantity: <%= customer.qty %></p>
                    <p class="card-text">Phone no: <%= customer.phNo %></p>
                    <form action="/deleteCus" method="POST" class="mt-3">
                        <input type="hidden" name="index" value="<%= index %>">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>
    <%- include("partials/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

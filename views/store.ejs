<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medicine Inventory</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Sour+Gummy:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="container mt-5 wrapper">
        <form class="row g-3 form" action="/submit" method="POST">
            <div class="col-12">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" name="name" placeholder="Medicine name" required>
            </div>
            <div class="col-md-6">
                <label for="exp" class="form-label">Expiry Date</label>
                <input type="date" class="form-control" name="exp" required>
            </div>
            <div class="col-md-6">
                <label for="mfd" class="form-label">Manufacturing Date</label>
                <input type="date" class="form-control" name="mfd" required>
            </div>
            <div class="col-md-6">
                <label for="price" class="form-label">Price</label>
                <input type="text" class="form-control" name="price" placeholder="Price" required>
            </div>
            <div class="col-md-6">
                <label for="stock" class="form-label">Instock</label>
                <input type="text" class="form-control" name="stock" placeholder="Stock" required>
            </div>
            <div class="col-12">
                <input type="submit" class="btn buttons" value="Submit">
            </div>
        </form>
        <% meds.forEach((med, index) => { %>
            <div class="card mt-3">
                <h5 class="card-header"><%= med.name %></h5>
                <div class="card-body">
                    <h5 class="card-title">Price: <%= med.price %>/-Rs</h5>
                    <p class="card-text">Manufacturing Date: <%= med.mfd %></p>
                    <p class="card-text">Stock: <%= med.stock %></p>
                    <p class="card-text">Expiry Date: <%= med.exp %></p>
                    <form action="/deleteMed" method="POST" class="mt-3">
                        <input type="hidden" name="index" value="<%= index %>">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>
    <%- include("partials/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
